<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Home">

    <LinearLayout
        android:id="@+id/home_header"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/im_head2"
        android:gravity="center_vertical|center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/user_profile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:contentDescription="@string/logo"
            app:srcCompat="@drawable/ic_logow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KAnggara75"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/Background"
            android:text="KAnggara75@gmail.com"
            android:textColor="@android:color/white"
            android:textSize="15sp" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/container_scroll_view"
        android:layout_below="@+id/home_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <GridLayout
            android:id="@+id/home_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e2cabd"
            android:padding="10dp"
            android:columnCount="2"
            android:rowCount="3">

            <Button
                android:id="@+id/control"
                android:layout_width="150dp"
                android:layout_height="106dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_control"
                android:text="Control"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_column="0"
                android:layout_row="0"/>

            <ImageView
                android:layout_margin="5dp"
                android:id="@+id/iv1"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:background="#FEFAF4"
                android:padding="25dp"/>

            <Button
                android:id="@+id/control"
                android:layout_width="150dp"
                android:layout_height="106dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_control"
                android:text="Control"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_column="1"
                android:layout_row="0"/>

            <ImageView
                android:layout_margin="5dp"
                android:id="@+id/iv1"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:background="#FEFAF4"
                android:padding="25dp"/>
            <Button
                android:id="@+id/control"
                android:layout_width="150dp"
                android:layout_height="106dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_control"
                android:text="Control"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_column="0"
                android:layout_row="1"/>

            <ImageView
                android:layout_margin="5dp"
                android:id="@+id/iv1"
                android:layout_column="0"
                android:layout_row="1"
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:background="#FEFAF4"
                android:padding="25dp"/>
            <Button
                android:id="@+id/control"
                android:layout_width="150dp"
                android:layout_height="106dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_control"
                android:text="Control"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_column="1"
                android:layout_row="1"/>

            <ImageView
                android:layout_margin="5dp"
                android:id="@+id/iv1"
                android:layout_column="1"
                android:layout_row="1"
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:background="#FEFAF4"
                android:padding="25dp"/>

            <Button
                android:id="@+id/control"
                android:layout_width="150dp"
                android:layout_height="106dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_control"
                android:text="Control"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_column="0"
                android:layout_row="2"/>

            <ImageView
                android:layout_margin="5dp"
                android:id="@+id/iv1"
                android:layout_column="0"
                android:layout_row="2"
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:background="#FEFAF4"
                android:padding="25dp"/>

            <Button
                android:id="@+id/control"
                android:layout_width="150dp"
                android:layout_height="106dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_control"
                android:text="Control"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_column="1"
                android:layout_row="2"/>

            <ImageView
                android:layout_margin="5dp"
                android:id="@+id/iv1"
                android:layout_column="1"
                android:layout_row="2"
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:background="#FEFAF4"
                android:padding="25dp"/>
        </GridLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bott_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/bottom_nav" />

</RelativeLayout>